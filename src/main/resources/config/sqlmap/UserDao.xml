<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dianping.model.User">
    <!--     <select id="load" parameterType="int" resultType="com.dianping.model.User">
            SELECT * from t_user where id=#{id}
        </select> -->

    <select id="load" parameterType="int" resultMap="userMap">
        SELECT * FROM t_user WHERE WHERE id=#{id}
    </select>


    <insert id="add" parameterType="com.ips.User">
        INSERT INTO t_user (username,password)
        VALUES (#{username},#{password})
    </insert>
    <update id="update" parameterType="comips.User">
        UPDATE t_user SET password=#{password} WHERE id=#{id}
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM t_user WHERE id=#{id}
    </delete>
</mapper>